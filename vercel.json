{
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "build/**",     "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/index.js" },


    { "src": "^/((?:static|asset-manifest\\.json|manifest\\.json|favicon\\.ico|logo\\d+\\.png).*)$", "dest": "/build/$1" },


    { "src": "^(?!/api/).*$", "dest": "/build/index.html" }
  ]
}