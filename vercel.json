{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "api/api-lib/index.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/api-lib/index.js?path=:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}